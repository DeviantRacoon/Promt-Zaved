{
  "manifest_version": 3,
  "name": "ProZv",
  "version": "1.0.0",
  "description": "Desbloquea el poder de las ideas en un instante! Utiliza ProZv para ahorrar tus prompts y acceder a ellos en cualquier momento desde tu navegador.",
  "action": { "default_popup": "index.html" },
  "background": { "scripts": ["background.js"], "type": "module" },
  "permissions": ["storage", "identity"],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://securetoken.googleapis.com/*"
  ],
  "icons": {
    "48": "logo.svg",
    "96": "logo.svg"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://www.googleapis.com https://securetoken.googleapis.com",
    "content_scripts": "script-src 'self'; object-src 'self';"
  },
  "browser_specific_settings": {
    "gecko": { "id": "hello-auth@example.com", "strict_min_version": "121.0" }
  }
}
