{
  "manifest_version": 3,
  "name": "ProZv",
  "version": "1.0.0",
  "description": "Desbloquea el poder de las ideas en un instante! Utiliza ProZv para ahorrar tus prompts y acceder a ellos en cualquier momento desde tu navegador.",
  "action": {
    "default_title": "Prompt Saver",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "permissions": ["storage"],
  "host_permissions": ["https://chat.openai.com/*"],
  "icons": {
    "48": "logo.svg",
    "96": "logo.svg"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' https://apis.google.com; object-src 'self'"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "hello-auth@example.com",
      "strict_min_version": "109.0"
    }
  }
}
